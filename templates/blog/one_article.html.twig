{% extends 'base.html.twig' %}

{% block title %}Blog - Article{% endblock %}

{% block body %}


    <div class="container">
        <div class="row" style="margin: 50px 0">
            <div class="col-xl-12">
                <div class="card">
                    <img class="card-img-top" src="{{ asset('img/') ~ article.img }}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.title }}</h5>
                        <p class="card-text">{{ article.content }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}