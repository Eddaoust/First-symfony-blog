{% extends 'base.html.twig' %}

{% block title %}Blog - homepage{% endblock %}


{% block body %}
    <div class="container">
    {% for article in articles %}
        <div class="row" style="margin: 50px 0">
            <div class="col-xl-12">
                <div class="card">
                    <img class="card-img-top" src="{{ asset('img/') ~ article.img }}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.title }}</h5>
                        <p class="card-text">{{ article.content | striptags | slice(0, 200) }}...</p>
                        <a href="{{ path('one_article', {'id': article.id}) }}" class="btn btn-outline-primary my-2 my-sm-0">Lire plus</a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>


{% endblock %}