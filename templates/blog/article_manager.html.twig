{% extends 'base.html.twig' %}

{% block title %}GÃ©rer les articles{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 50px">
        <p>Il y a {{ articles | length }} article(s) sur le blog.</p><br>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Date</th>
                <th scope="col">Image</th>
                <th scope="col">Modifier</th>
                <th scope="col">Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td scope="row">{{ article.id }}</td>
                    <td>{{ article.title }}</td>
                    <td>{{ article.created | date('d/m/Y') }}</td>
                    <td><img style="width: 50px;" src="{{ asset('img/') ~ article.img }}"></td>
                    <td class="case"><a href="{{ path('update_article', {'id': article.id}) }}"><i class="far fa-edit"></i></a></td>
                    <td class="case"><a href="#"><i class="far fa-trash-alt"></i></a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}